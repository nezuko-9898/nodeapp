pipeline {

    agent any

    environment {
        APP_DIR = "/home/ubuntu/nodeapp"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup Node') {
            steps {
                sh '''
                export NVM_DIR="$HOME/.nvm"
                source $NVM_DIR/nvm.sh
                nvm use --lts
                '''
            }
        }

        stage('Deploy to EC2 Folder') {
            steps {
                sh '''
                cp -r * $APP_DIR
                '''
            }
        }

        stage('Install & Run App') {
            steps {
                sh '''
                export NVM_DIR="$HOME/.nvm"
                source $NVM_DIR/nvm.sh

                cd $APP_DIR

                npm install

                pm2 delete nodeapp || true
                pm2 start app.js --name nodeapp
                pm2 save
                '''
            }
        }
    }
}
