pipeline {

    agent any

    environment {
        APP_DIR = "/home/ubuntu/nodeapp"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup Node using NVM') {
            steps {
                sh '''
                export NVM_DIR="$HOME/.nvm"
                source $NVM_DIR/nvm.sh
                nvm install --lts
                nvm use --lts
                node -v
                npm -v
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                export NVM_DIR="$HOME/.nvm"
                source $NVM_DIR/nvm.sh
                npm install
                '''
            }
        }

        stage('Run Application') {
            steps {
                sh '''
                export NVM_DIR="$HOME/.nvm"
                source $NVM_DIR/nvm.sh

                pm2 delete nodeapp || true
                pm2 start app.js --name nodeapp
                pm2 save
                '''
            }
        }
    }
}
